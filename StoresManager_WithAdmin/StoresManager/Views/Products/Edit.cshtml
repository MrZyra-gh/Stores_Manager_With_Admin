@model StoresManager.ViewModels.Products.EditVM
@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "EDIT PRODUCT";
}

<fieldset>
    <legend>EDIT PRODUCT</legend>
    <form action="/Products/Edit" method="post">
        @Html.HiddenFor(m => m.Id)
        <div class="grid">
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Brand)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Brand)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Brand)
                </div>

            </div>
            <div class="row">
                <div class="col-3">
                    @Html.ValidationMessage("summaryError")
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Save" />
                    <a href="/Products/Edit" class="right">Back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>