@model StoresManager.ViewModels.Offers.EditVM
@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "EDIT OFFER";
}

<fieldset>
    <legend>EDIT STORE</legend>
    <form action="/Offers/Edit" method="post">
        @Html.HiddenFor(m => m.Id)        
        <div class="grid">           
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.BasePrice)
                </div>
                <div class="col-2">
                    @Html.TextAreaFor(m => m.BasePrice)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.BasePrice)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.LoweredPrice)
                </div>
                <div class="col-2">
                    @Html.TextAreaFor(m => m.LoweredPrice)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.LoweredPrice)
                </div>
            </div>
            <div class="col-3">
                @Html.ValidationMessage("summaryError")
            </div>
        </div>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-2">
                <input type="submit" class="right" value="Save" />
                <a href="/Offers/Index" class="right">Back</a>
            </div>
        </div>
        </div>
    </form>
</fieldset>